<h1>Usuários</h1>
<%= link_to 'Novo Usuário', new_user_path, "class": 'btn btn-primary' %>
<table class="table">
  <thead>
    <tr>
      <th>#</th>
      <th>Nome</th>
      <th>Email</th>
      <th>Ações</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td>
          <%= link_to 'Editar', edit_user_path(user), "class": 'btn btn-primary' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
